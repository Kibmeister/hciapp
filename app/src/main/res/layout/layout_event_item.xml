<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:drawable ="@drawable/single_event_layout"
    android:paddingTop="15dp"
    tools:context=".MyEventsFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_image"
        android:layout_marginLeft = "20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
       >

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/id_item_event_description"
        android:layout_width="280dp"
        android:maxWidth="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/id_image"
        android:layout_marginBottom="15dp"
        android:text="Dinner time baby, for the hungry and starving"
        android:textColor="#F79E47" />

    <TextView
        android:id="@+id/id_item_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id_image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:textSize="12dp"
        android:text="Sunday, 19-20"
        android:textColor="#434D65"/>

    <TextView
        android:id="@+id/id_item_event_attending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="229dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/id_image"
        android:text="Attending, 3/4"
        android:textColor="#434D65"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/id_item_event_dividerLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_divider_line"
        android:layout_marginLeft="90dp"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/id_item_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_place_24px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft = "18dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="5dp"
        android:text="Close"
        android:textColor="#434D65"
        android:textSize="8dp" />


</RelativeLayout>